<?xml version="1.0" encoding="UTF-8" ?>
<!-- Rough version of the basic options, with room for improvement :P -->
<settings>
  <controls>
	  <keyboard>
		  <!-- SDL-names are meant to be used in the end -->
		  <quit value="ESCAPE">ESCAPE</quit>
	  </keyboard>
	  <controller>
		  <sensivity value="1.0">1.0</sensivity> 
		  <invert>
			  <x value="false">false</x>
			  <y value="false">false</y>
		  </invert>
		  <acceleration value="0.0">0.0</acceleration>
	  </controller>
	  <mouse>
		  <sensivity value="1.0">1.0</sensivity> 
		  <invert>
			  <x value="false">false</x>
			  <y value="false">false</y>
		  </invert>
		  <acceleration value="0.0">0.0</acceleration>
	  </mouse>
  </controls>
  <network>
	  <!-- Potential Network options -->
  </network>
  <sound>
	  <output>
		  <sfx value="1.0">1.0</sfx>		<!-- 0.0 (0%) - 5.0 (500%) -->
		  <music value="1.0">1.0</music>	<!-- 0.0 (0%) - 5.0 (500%) -->
	  </output>
	  <input>
		  <volume value="1.0">1.0</volume>	<!-- 0.0 (0%) - 5.0 (500%) -->
		  <muted value="true">true</muted>
	  </input>
  </sound>
  <video>
	  <resolution>
		  <width value="640">640</width>
		  <height value="480">480</height>
	  </resolution>
	  <bitdepth value="16">16</bitdepth>
	  <gamma value="1.0">1.0</gamma>		<!-- 0.0 (0%) - 5.0 (500%) -->
	  <windowed value="true">true</windowed>
  </video>
</settings>